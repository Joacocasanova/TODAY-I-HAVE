      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Datos de tu barber√≠a!</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= simple_form_for [ @task, @tag ] do |f| %>
                <%= f.input :title, label: "Title", placeholder: "Task Title" %>
                <%= f.input :content, label: "Content", placeholder: "Task Content" %>
                <%= f.input :tag, label: "Tag", placeholder: "Tag" %>

                <h3><%= Date.Today.strf('%d/%m/%Y') %></h3>

                <%= f.submit "Submit", class: "btn btn-primary" %>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
          </div>
        </div>
      </div>