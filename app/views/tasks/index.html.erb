<h1> Index!</h1>

<% @tasks.sort.reverse.map do |task_key, task_value| %>

  <% if task_key == Date.today %>
  <h1>Today</h1>
  <% elsif task_key == Date.today - 1 %>
  <h1>Yesterday</h1>
  <% else %>
  <h1><%= task_key %></h1>
  <% end %>
  <% task_value.each do |t| %>
  <h2><%= t.title %></h2>
  <p><%= t.content %></p>
    <% t.tags.each do |tag| %>
      <%= tag.name  %>
    <% end %>
  <% end %>
<% end %>

